<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa nombre del producto" %>
        </div>

        <div class="form-group">
          <%= f.text_field :url, class: "form-control input-lg", placeholder: "Ingresa la url" %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Inserta la descripcion" %>
        </div>

        <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
