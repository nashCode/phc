<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Productos</h1>
      <div class="text-right">
        <%= link_to "Agregar producto", new_product_path, class: "btn btn-primary" %>
      </div>
        <table class="table">
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>URL</th>
            <th>description</th>
            <th></th>
          </tr>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, product %></td>
            <td><%= product.url %></td>
            <td><%= product.description%></td>
            <td><%= link_to 'Editar', edit_product_path(product) %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
